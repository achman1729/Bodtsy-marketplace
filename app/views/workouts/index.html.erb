<h1>Workouts#index</h1>

<%if @workout%>
    <% @workout.each do |w|%>

        <div>
            <% if w.pictures.attached?%>
                <% w.pictures.each do |p| %>
                    <p>
                        <%= image_tag p, width: 120 %>
                    </p>
                <%end%>
            <%end%>
            <strong>Title: </strong>
            <%= w.title %>
            <br>
            <strong>Description: </strong>
            <%= w.description %>
            <br>
            <strong>Price: </strong>
            <%= w.price %>
            <br>
            <strong>Duration: </strong>
            <%= w.duration %>
            <br>
            <strong>Category: </strong>
            <%w.categories.each do |c|%>
                <%= c.name %>
            <%end%>
        </div>
        <%if current_user%>
            <div class="add-cart-button">
                <%= button_to('Add to cart', show_cart_path(current_user.id),{ params: {workout_id: w.id} }) %>
            </div>
            
        <%end%>
    <%end%>
<%end%>