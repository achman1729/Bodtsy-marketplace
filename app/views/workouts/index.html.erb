<h1>Workouts#index</h1>

<%if @workout%>
    <% @workout.each do |workout|%>

        <div>
            <% if workout.pictures.attached?%>
                <% workout.pictures.each do |picture| %>
                    <p>
                        <%= image_tag picture, width: 120 %>
                    </p>
                <%end%>
            <%end%>
            <strong>Title: </strong>
            <%= workout.title %>
            <br>
            <strong>Description: </strong>
            <%= workout.description %>
            <br>
            <strong>Price: </strong>
            <%= number_to_currency(workout.price) %>
            <br>
            <strong>Duration: </strong>
            <%= workout.duration %>
            <br>
            <strong>Category: </strong>
            <%workout.categories.each do |category|%>
                <%= category.name %>
            <%end%>
        </div>
        <%if current_user%>
            <div class="add-cart-button">
                <%= button_to('Add to cart', show_cart_path(current_user.id),{ params: {workout_id: workout.id} }) %>
            </div>
        <%end%>
    <%end%>
<%end%>

