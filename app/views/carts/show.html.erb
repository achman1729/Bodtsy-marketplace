<h1>Cart </h1>

<%@cart_items.each do |cart_item|%>
    <div>
        <% if cart_item.workout.pictures.attached?%>
        <% cart_item.workout.pictures.each do |picture| %>
            <p>
        <%= image_tag picture, width: 120 %>
        </p>
        <%end%>
    <%end%>
    <strong>Cart ID: </strong>
        <%= cart_item.id %>
        <br>
        <strong>Title: </strong>
        <%= cart_item.workout.title %>
        <br>
        <strong>Description: </strong>
        <%= cart_item.workout.description %>
        <br>
        <strong>Price: </strong>
        <%= cart_item.workout.price %>
        <br>
        <strong>Duration: </strong>
        <%= cart_item.workout.duration %>
        <br>
        <strong>Category: </strong>
            <%cart_item.workout.categories.each do |category|%>
                <%= category.name %>
            <%end%>
    </div>
    <div>
        <%= link_to('Delete', cart_item_path(cart_item_id: cart_item.id, user_id: current_user.id), method: "delete") %>
    </div>
    <br>
<%end%>
