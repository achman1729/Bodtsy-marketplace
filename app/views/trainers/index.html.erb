<h1>Trainers#index</h1>
<p>Add a 
    <%= link_to('workout', new_workout_path) %>
</p>

<%# <% if @workouts%> %>
    <%@workouts.each do |w|%>

    <% if w.pictures.attached?%>
        <% w.pictures.each do |p| %>
            <p>
        <%= image_tag p, width: 120 %>
        </p>
        <%end%>
    <%end%>
        <div>
            <strong>Title: </strong>
            <%= w.title %>
            <br>
            <strong>Description: </strong>
            <%= w.description %>
            <br>
            <strong>Price: </strong>
            <%= w.price %>
            <br>
            <strong>Duration: </strong>
            <%= w.duration %>
            <br>
            <strong>Categories: </strong>
            <% w.categories.each do |c| %>
                <%= c.name %>
            <%end%>
        </div>
        <div class="workouts-edit-button">
            edit button
        </div>
        <div class="workouts-delete-button">
            delete button
        </div>
    <% end%>
<%# <% end%> %>