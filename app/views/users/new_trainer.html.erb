<div class="container login-container">
  <div class="row justify-content-md-center">
    <div class="col-md-4 login-form-1">
        <%= form_with model:@user, url:create_trainer_path, method: :post do |form| %>
            <div class="form-group">
                <%= form.text_field :first_name, required: true, placeholder: "First name", id:"long-input" %><br/>
            </div>
            <div class="form-group">
                <%= form.text_field :last_name, required: true, placeholder: "Last name", id:"long-input" %><br/>
            </div>
            <div class="form-group">
                <%= form.text_field :street, required: true, placeholder: "Street name", id:"long-input" %><br/>
            </div>
            <div class="form-group">
                <%= form.text_field :suburb, required: true, placeholder: "Suburb", id:"long-input" %><br/>
            </div>
            <div class="form-group">
                <%= form.text_field :state, required: true, placeholder: "State", id:"long-input" %><br/>
            </div>
            <div class="form-group">
                <%= form.text_field :country, required: true, placeholder: "Country", id:"long-input" %><br/>
            </div>
            <div class="form-group">
                <%= form.number_field :postcode, required: true, placeholder: "Postcode", id:"long-input" %><br/>
            </div>
            <div class="form-group">
                <%= form.submit "Submit", class: "btnSubmit"%>
            </div>
        <%end%>
        </div>
    </div>
</div>